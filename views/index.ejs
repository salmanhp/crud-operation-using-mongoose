<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css" integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l" crossorigin="anonymous">

  </head>
  <body>
    <h1><%= title %></h1>
    


    <section class="container">
      
      

      <form action="/search/" method="post" class="form form-row align-items-center">
        <div class="form-group col-3">
          <label>By Name</label>
          <input type="text" class="form-control" name="byname" placeholder="">
        </div>

        <div class="form-group col-3">
          <label>By Email</label>
          <input type="email" class="form-control" name="byemail" placeholder="">
        </div>

        <div class="form-group col-3">
          <label>By Employee Type</label>
          <select class="form-control" name="byemptype">
            <option selected value="Hourly">Hourly</option>
            <option value="Fixed">Fixed</option>
          </select>
        </div>

        <div class="col-3 ">
          <input type="submit" value="Submit" class="btn btn-danger"/>
        </div>


      </form>



      <table class="table">
        <thead>
          <th>Name</th>
          <th>Email </th>
          <th>Emp Type </th>
          <th>Hourly Rate <inpu</th>
          <th>Total Hours <inp</th>
          <th>Total Amount </th>
          <th>Action</th>
        </thead>

        <tbody>

          
          <% if(records.length > 0){%>
          <% records.forEach( (row) => { %>

          <tr>
            <td><%= row.name %></td>
            <td><%= row.email %></td>
            <td><%= row.etype %></td>
            <td><%= row.hourlyrate %></td>
            <td><%= row.totalhour %></td>
            <td><%= row.total %></td>
            <td>
              <a class="btn btn-primary btn-sm" href="/edit/<%= row._id %>">Edit</a>
              <a class="btn btn-danger btn-sm" href="/delete/<%= row._id %>">Delete</a>
            </td>
          
          </tr>

          <% })}else{%>
            <tr>
              <td  colspan="6" class="text-center text-danger">No Record Found</td>
            </tr>
          <% } %>  

        </tbody>
        
      </table>

  

      <form action="/" method="post">
        <div class="form-group w-50 offset-2">
          
          <input type="text" class="form-control" name="name" placeholder="Name">
          
        </div>
        
        <div class="form-group w-50 offset-2">
          <input type="email" class="form-control" name="email" placeholder="Email address">
          
        </div>

        <div class="form-group  w-50 offset-2">
          <select class="form-control" name="etype">
            <option value="Hourly">Hourly</option>
            <option value="Fixed">Fixed</option>
          </select> 
        </div>

        <div class="form-group  w-50 offset-2">       
          <input type="text" class="form-control" name="hourlyrate" placeholder="Hourly Rate">
        </div>

        <div class="form-group  w-50 offset-2">
          <input type="text" class="form-control" name="totalhour" placeholder="Total Hours">
        </div>

        
        <button type="submit" class="btn btn-primary offset-2">Submit</button>
      </form>

    

    </section>


  </body>
</html>
